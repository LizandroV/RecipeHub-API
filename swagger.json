          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Spaghetti Bolognese"
                  },
                  "ingredients": {
                    "type": "string",
                    "example": "Spaghetti, minced meat, tomato sauce, onion, garlic"
